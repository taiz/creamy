package creamy.activity;

import java.lang.reflect.Field;
import java.util.HashMap;
import java.util.Map;
import org.junit.*;
import static org.junit.Assert.*;

/**
 *
 * @author ATakahashi
 */
public class TitledActivityTest {
    
    public TitledActivityTest() {
    }


    /**
     * Test of initialize method, of class TitledActivity.
     */
    @Test
    public void testInitialize() {
        System.out.println("initialize");
        Activity parent = null;
        Map<Field, Object> params = new HashMap<Field, Object>();
        TitledActivity instance = new TitledActivityTestImpl();
        //何もセットされないこと
        try {
            instance.initialize();
        } catch (Exception e) {
            fail(e.getMessage());
        }
        assertEquals(null, instance.getParent());
        //TODO:paramsに対応する内容がセットされていないこと
        //引数に渡したものが反映されているか
        Activity testActivity = new TitledActivityTestImpl();
        try {
            instance.initialize(testActivity, params);
        } catch (Exception e) {
            fail(e.getMessage());
        }
        assertEquals(testActivity, instance.getParent());
        //TODO:paramsに対応する内容がセットされていること
    }

    /**
     * Test of title method, of class TitledActivity.
     */
    @Test
    public void testTitle() {
        System.out.println("title");
        TitledActivity instance = new TitledActivityTestImpl();
        String result = instance.title();
        assertEquals("TestTitle", result);
    }

    public class TitledActivityTestImpl extends TitledActivity {

        public String title() {
            return "TestTitle";
        }

        @Override
        public void initialize() { }
    }
}
